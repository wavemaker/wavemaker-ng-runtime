{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@utils/*": [ "utils/*" ],
            "@components/*": [ "components/*" ],
            "@runtime/*": ["runtime/*"]
        },
        "outDir": "./dist/out-tsc",
        "sourceMap": false,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "module": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "angularCompilerOptions": {
        "genDir": "./dist",
        "debug": false
    }
}
