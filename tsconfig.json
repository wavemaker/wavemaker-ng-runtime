{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@wm/utils": [ "utils" ],
            "@wm/components": [ "components" ],
            "@wm/variables": [ "variables" ],
            "@wm/http": [ "http-service" ],
            "@wm/runtime": ["runtime"],
            "@wm/transpiler": ["transpiler"]
        },
        "outDir": "./dist/out-tsc",
        "sourceMap": false,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "module": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    }
}
