{
    "extends": "../tsconfig.build.json",
    "compilerOptions": {
        "outDir": "../dist/out-tsc/transpiler"
    },
    "files": [
        "index.ts"
    ],
    "exclude": [
        "dist"
    ],
    "angularCompilerOptions": {
        "debug": false,
        "skipTemplateCodegen": true,
        "enableResourceInlining": true,
        "skipMetadataEmit": true,
        "annotationsAs": "static fields"
    }
}
