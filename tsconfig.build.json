{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@swipey": ["dist/out-tsc/swipey/"],
            "@wm/core": ["dist/out-tsc/core/"],
            "@wm/transpiler": ["dist/out-tsc/transpiler/"],
            "@wm/security": ["dist/out-tsc/security/"],
            "@wm/components": ["dist/out-tsc/components/"],
            "@wm/http": ["dist/out-tsc/http-service/"],
            "@wm/oAuth": ["dist/out-tsc/oAuth/"],
            "@wm/variables" : ["dist/out-tsc/variables/"],
            "@wm/runtime": ["dist/out-tsc/runtime/"],
            "@wm/mobile/core": ["dist/out-tsc/mobile/core/"],
            "@wm/mobile/components": ["dist/out-tsc/mobile/components/"],
            "@wm/mobile/variables": ["dist/out-tsc/mobile/variables/"],
            "@wm/mobile/runtime": ["dist/out-tsc/mobile/runtime/"],
            "@wm/mobile/offline": ["dist/out-tsc/mobile/offline/"],
